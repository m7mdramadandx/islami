<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.Dashboard">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorBackground"
            android:elevation="16dp"
            ads:navigationIcon="@drawable/slide_menu"
            ads:title="@string/app_name"
            ads:titleTextAppearance="@style/dashboard_title">

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="42dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:background="@drawable/background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="16dp">

                <TextView
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/suggested_to_you"
                    android:textColor="@color/titleColor"
                    app:layout_constraintBottom_toTopOf="@+id/suggestionRecyclerView"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/suggestionRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginStart="8dp"
                    ads:layout_constraintBottom_toBottomOf="parent"
                    ads:layout_constraintEnd_toEndOf="parent"
                    ads:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/storiesCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:background="@color/colorSecondary"
                    android:paddingVertical="8dp">

                    <TextView
                        style="@style/TextAppearance.AppCompat.Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="8dp"
                        android:text="@string/stories"
                        android:textColor="@android:color/white" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="8dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/expand" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="42dp"
                        ads:cardBackgroundColor="@android:color/transparent">

                        <com.smarteist.autoimageslider.SliderView
                            android:id="@+id/storiesSlider"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            app:sliderIndicatorSelectedColor="@color/colorAccent"
                            app:sliderIndicatorUnselectedColor="@android:color/white">

                            <include
                                android:id="@+id/progress"
                                layout="@layout/loading_dialog" />

                        </com.smarteist.autoimageslider.SliderView>

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/quotesCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:background="@color/colorSecondary"
                    android:paddingVertical="8dp">

                    <TextView
                        style="@style/TextAppearance.AppCompat.Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/quotes"
                        android:textColor="@android:color/white" />


                    <ImageButton
                        android:id="@+id/seeAllQuotes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="8dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/expand" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="42dp"
                        ads:cardBackgroundColor="@android:color/transparent">

                        <com.smarteist.autoimageslider.SliderView
                            android:id="@+id/quotesSlider"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_below="@id/seeAllQuotes"
                            app:sliderIndicatorSelectedColor="@color/colorAccent"
                            app:sliderIndicatorUnselectedColor="@android:color/white">

                            <include
                                android:id="@+id/progress1"
                                layout="@layout/loading_dialog"/>

                        </com.smarteist.autoimageslider.SliderView>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/familyTreeCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:background="@color/colorSecondary"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/prophets_tree"
                        android:textColor="@android:color/white"
                        android:textSize="21sp" />

                    <ImageButton
                        android:id="@+id/seeAllTrees"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@android:color/transparent"
                        android:src="@drawable/expand" />

                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/seeAllTrees">

                        <GridLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:useDefaultMargins="true">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/muhammadTree"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:useDefaultMargins="true"
                                ads:cardBackgroundColor="#fff">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="100dp"
                                    android:layout_gravity="center"
                                    android:adjustViewBounds="true"
                                    android:background="@android:color/transparent"
                                    android:paddingBottom="16dp"
                                    android:src="@drawable/aaa" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|center_horizontal"
                                    android:text="@string/muhammad_family_tree"
                                    android:textColor="@color/colorSecondary" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/prophetsTree"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:useDefaultMargins="true"
                                ads:cardBackgroundColor="#fff">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="100dp"
                                    android:layout_gravity="center"
                                    android:adjustViewBounds="true"
                                    android:background="@android:color/transparent"
                                    android:paddingBottom="16dp"
                                    android:src="@drawable/aaa" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|center_horizontal"
                                    android:text="@string/prophets_family_tree"
                                    android:textColor="@color/colorSecondary" />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/bigTree"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:useDefaultMargins="true"
                                ads:cardBackgroundColor="#fff">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="100dp"
                                    android:layout_gravity="center"
                                    android:adjustViewBounds="true"
                                    android:background="@android:color/transparent"
                                    android:paddingBottom="16dp"
                                    android:src="@drawable/aaa" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|center_horizontal"
                                    android:text="@string/the_big_family_tree"
                                    android:textColor="@color/colorSecondary" />

                            </androidx.cardview.widget.CardView>

                        </GridLayout>

                    </HorizontalScrollView>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:background="@color/colorSecondary"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="12dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/topics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="140dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/failure_img" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_overlay" />

                        <TextView
                            style="@style/TextAppearance.AppCompat.Title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:paddingBottom="6dp"
                            android:text="@string/topics"
                            android:textAlignment="center"
                            android:textColor="#fff" />

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/home_banner_id" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>