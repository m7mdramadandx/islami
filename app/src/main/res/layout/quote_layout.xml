<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingVertical="24dp"
    tools:context=".ui.activity.Quote">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quranic_verses"
        android:textColor="@color/titleColor"
        android:textSize="21sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="16dp"
        android:layout_weight="1"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <com.smarteist.autoimageslider.SliderView
            android:id="@+id/versesSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/silver_grey"
            app:sliderAnimationDuration="500"
            app:sliderIndicatorAnimationDuration="600"
            app:sliderIndicatorSelectedColor="@color/colorAccent"
            app:sliderIndicatorUnselectedColor="@color/colorPrimary"
            app:sliderScrollTimeInSec="4" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/hadiths"
        android:textColor="@color/titleColor"
        android:textSize="21sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="16dp"
        android:layout_weight="1"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <com.smarteist.autoimageslider.SliderView
            android:id="@+id/hadithsSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/silver_grey"
            app:sliderAnimationDuration="500"
            app:sliderIndicatorAnimationDuration="600"
            app:sliderIndicatorSelectedColor="@color/colorAccent"
            app:sliderIndicatorUnselectedColor="@color/colorPrimary"
            app:sliderScrollTimeInSec="4" />
    </androidx.cardview.widget.CardView>

</LinearLayout>