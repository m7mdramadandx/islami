<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/nav_dashboard">

    <fragment
        android:id="@+id/nav_dashboard"
        android:name="com.ramadan.islami.ui.fragment.Dashboard"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_nav_dashboard_to_nav_quran"
            app:destination="@id/nav_quran"
            app:enterAnim="@anim/enter"
            app:exitAnim="@anim/exit"
            app:popEnterAnim="@anim/pop_enter"
            app:popExitAnim="@anim/pop_exit" />
        <action
            android:id="@+id/action_dashboard_to_stories"
            app:destination="@id/nav_stories"
            app:enterAnim="@anim/enter"
            app:exitAnim="@anim/exit"
            app:popEnterAnim="@anim/pop_enter"
            app:popExitAnim="@anim/pop_exit" />
        <action
            android:id="@+id/action_dashboard_to_daily"
            app:destination="@id/nav_daily"
            app:enterAnim="@anim/enter"
            app:exitAnim="@anim/exit"
            app:popEnterAnim="@anim/pop_enter"
            app:popExitAnim="@anim/pop_exit" />
        <action
            android:id="@+id/action_dashboard_to_quotes"
            app:destination="@id/nav_quotes"
            app:enterAnim="@anim/enter"
            app:exitAnim="@anim/exit"
            app:popEnterAnim="@anim/pop_enter"
            app:popExitAnim="@anim/pop_exit" />
        <action
            android:id="@+id/action_dashboard_to_topics"
            app:destination="@id/nav_topics"
            app:enterAnim="@anim/enter"
            app:exitAnim="@anim/exit"
            app:popEnterAnim="@anim/pop_enter"
            app:popExitAnim="@anim/pop_exit" />
        <action
            android:id="@+id/action_dashboard_to_family_tree"
            app:destination="@id/nav_family_tree"
            app:enterAnim="@anim/enter"
            app:exitAnim="@anim/exit"
            app:popEnterAnim="@anim/pop_enter"
            app:popExitAnim="@anim/pop_exit" />
        <action
            android:id="@+id/action_dashboard_to_family_tree_details"
            app:destination="@id/nav_family_tree_details"
            app:enterAnim="@anim/enter"
            app:exitAnim="@anim/exit"
            app:popEnterAnim="@anim/pop_enter"
            app:popExitAnim="@anim/pop_exit">
            <argument
                android:name="intentKey"
                app:argType="string" />
        </action>

        <action
            android:id="@+id/action_dashboard_to_feedback"
            app:destination="@id/nav_feedback"
            app:enterAnim="@anim/enter"
            app:exitAnim="@anim/exit"
            app:popEnterAnim="@anim/pop_enter"
            app:popExitAnim="@anim/pop_exit" />
        <action
            android:id="@+id/action_dashboard_to_settings"
            app:destination="@id/nav_settings"
            app:enterAnim="@anim/enter"
            app:exitAnim="@anim/exit"
            app:popEnterAnim="@anim/pop_enter"
            app:popExitAnim="@anim/pop_exit" />

        <action
            android:id="@+id/action_dashboard_to_share"
            app:destination="@id/nav_share" />

    </fragment>

    <fragment
        android:id="@+id/nav_quran"
        android:name="com.ramadan.islami.ui.fragment.Surah"
        android:label="@string/quran"
        tools:layout="@layout/fragment_sura">
        <action
            android:id="@+id/action_quran_to_ayah_fragment"
            app:destination="@id/nav_ayah_fragment"
            app:enterAnim="@anim/enter"
            app:exitAnim="@anim/exit"
            app:popEnterAnim="@anim/pop_enter"
            app:popExitAnim="@anim/pop_exit" />
    </fragment>
    <fragment
        android:id="@+id/nav_ayah_fragment"
        android:name="com.ramadan.islami.ui.fragment.AyahPage"
        android:label="Ayah Quran"
        tools:layout="@layout/fragment_ayah">
        <argument
            android:name="surah"
            android:defaultValue="@null"
            app:argType="com.ramadan.islami.data.model.Surah"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/nav_stories"
        android:name="com.ramadan.islami.ui.fragment.Stories"
        android:label="@string/stories"
        tools:layout="@layout/recycler_view" />

    <fragment
        android:id="@+id/nav_daily"
        android:name="com.ramadan.islami.ui.fragment.Daily"
        android:label="@string/daily"
        tools:layout="@layout/recycler_view" />

    <fragment
        android:id="@+id/nav_quotes"
        android:name="com.ramadan.islami.ui.fragment.Quotes"
        android:label="@string/quotes"
        tools:layout="@layout/recycler_view" />

    <fragment
        android:id="@+id/nav_topics"
        android:name="com.ramadan.islami.ui.fragment.Topics"
        android:label="@string/topics"
        tools:layout="@layout/recycler_view" />

    <fragment
        android:id="@+id/nav_family_tree"
        android:name="com.ramadan.islami.ui.fragment.FamilyTree"
        android:label="@string/family_tree"
        tools:layout="@layout/recycler_view">
        <action
            android:id="@+id/action_family_tree_to_family_tree_details"
            app:destination="@id/nav_family_tree_details"
            app:enterAnim="@anim/enter"
            app:exitAnim="@anim/exit"
            app:popEnterAnim="@anim/pop_enter"
            app:popExitAnim="@anim/pop_exit" />
    </fragment>

    <fragment
        android:id="@+id/nav_family_tree_details"
        android:name="com.ramadan.islami.ui.fragment.FamilyTreeDetails"
        android:label="@string/family_tree"
        tools:layout="@layout/fragment_family_tree">
        <argument android:name="intentKey" />
    </fragment>

    <fragment
        android:id="@+id/nav_feedback"
        android:name="com.ramadan.islami.ui.fragment.Feedback"
        android:label="@string/send_feedback"
        tools:layout="@layout/fragment_feedback" />

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.ramadan.islami.ui.fragment.Settings"
        android:label="@string/settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/nav_share"
        android:name="com.ramadan.islami.ui.fragment.Feedback"
        android:label="@string/share" />

</navigation>